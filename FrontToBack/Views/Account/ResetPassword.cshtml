@model ForgetPassword
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="container">
    <div class="row">
        <form method="post">
            <input hidden asp-for="User" placeholder="Enter Email" />
            <input hidden asp-for="Token" placeholder="Enter Email" />
            <input asp-for="Password" placeholder="Enter Email" />
            <input asp-for="ConfirmPassword" placeholder="Enter Email" />
            <button class="btn btn-primary" type="submit">Reset Password</button>
        </form>
    </div>
</div>

